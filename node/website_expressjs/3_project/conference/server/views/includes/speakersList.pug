article.speakerslist.jumbotron.hidden-xs
    .container
        .row
            each speaker in speakersList
                .col-sm-4.text-center
                    h3.speakerslist-title=speaker.title
                    h5.speakerslist-name
                        | with&nbsp
                        a(href=`/speakers/${speaker.nameURL}`)=speaker.name
                    p.speakerslist-info
                        a(href=`/speakers/${speaker.nameURL}`)
                            img.speakerslist-img.img-circle(src=`/images/speakers/${speaker.nameURL}_tn.jpg`, alt=`Photo of ${speaker.name}`)